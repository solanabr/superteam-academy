# ===========================================
# Superteam Academy - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# --- Solana Configuration ---
# Program deployed on devnet
NEXT_PUBLIC_ACADEMY_PROGRAM_ID=DFB44LZedVS461TK6kv4o9U28ALuhJF26N5V9yRyCvtZ
NEXT_PUBLIC_ACADEMY_CLUSTER=devnet
NEXT_PUBLIC_ACADEMY_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# --- Authentication ---
# JWT secret for wallet auth sessions (generate a random 64-char hex string)
AUTH_JWT_SECRET=your-jwt-secret-here

# Google OAuth (optional - wallet auth works without this)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional - bonus feature)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# NextAuth secret (required if using Google/GitHub auth)
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# --- CMS (Sanity) ---
# Optional - falls back to hardcoded course data if not configured
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# --- Analytics ---
# Google Analytics 4 (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# PostHog (optional - for heatmaps and session replay)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Sentry (optional - for error monitoring)
NEXT_PUBLIC_SENTRY_DSN=

# --- Deployment ---
# Set to your deployment URL in production
NEXT_PUBLIC_APP_URL=http://localhost:3000
