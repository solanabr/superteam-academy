            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\",\n  \"learner\": \"{{learnerPubkey}}\",\n  \"credentialAsset\": \"{{credentialAssetPubkey}}\",\n  \"credentialName\": \"{{credentialName}}\",\n  \"metadataUri\": \"{{credentialUpgradeMetadataUri}}\",\n  \"coursesCompleted\": 2,\n  \"totalXp\": 800,\n  \"trackCollection\": \"{{trackCollectionPubkey}}\"\n}"
            },
            "url": {
